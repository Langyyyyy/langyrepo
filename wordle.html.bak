        <div style="color: #121387; background-color: #baf2a9;" id="wor">
          <h1 id="header"><strong>Wordle</strong></h1>
          <p>Word list courtesy of <a href="https://gist.github.com/kcwhite/bb598f1b3017b5477cb818c9b086a5d9"

              target="_blank" rel="noopener noreferrer">kcwhite‚Äôs public word
              list</a> ‚Äî thank you!</p>
          <div id="wordleContainer">
            <div class="board" id="board"></div>
            <input id="guessInput" maxlength="5" placeholder="Type 5-letter word"

              autofocus="" type="text"> <button id="playAgainBtn">Play Again</button>
          </div>
          <script>
            let WORD_LIST = [];
            let WORD = '';
            const board = document.getElementById('board');
            const input = document.getElementById('guessInput');
            const playAgainBtn = document.getElementById('playAgainBtn');
            let currentRow = 0;

            function chooseNewWord() {
              const candidates = WORD_LIST.filter(w => w.length === 5);
              WORD = candidates[Math.floor(Math.random() * candidates.length)];
            }

            function clearBoard() {
              board.innerHTML = '';
              for (let i = 0; i < 6; i++) {
                const row = document.createElement('div');
                row.className = 'row';
                for (let j = 0; j < 5; j++) {
                  const tile = document.createElement('div');
                  tile.className = 'tile';
                  row.appendChild(tile);
                }
                board.appendChild(row);
              }
            }

            function resetGame() {
              chooseNewWord();
              clearBoard();
              input.value = '';
              input.disabled = false;
              currentRow = 0;
              playAgainBtn.style.display = 'none';
              console.log("Secret word:", WORD); // for debugging
            }

            input.addEventListener('keyup', (e) => {
              if (e.key === 'Enter') {
                const guess = input.value.trim().toLowerCase();
                if (guess.length !== 5 || currentRow >= 6) return;

                if (!WORD_LIST.includes(guess)) {
                  alert("‚ùå Not a valid word!");
                  return;
                }

                const row = board.children[currentRow];
                for (let i = 0; i < 5; i++) {
                  const tile = row.children[i];
                  tile.textContent = guess[i];

                  if (guess[i] === WORD[i]) {
                    tile.classList.add('correct');
                  } else if (WORD.includes(guess[i])) {
                    tile.classList.add('present');
                  } else {
                    tile.classList.add('absent');
                  }
                }

                if (guess === WORD) {
                  setTimeout(() => alert("üéâ You got it!"), 100);
                  input.disabled = true;
                  playAgainBtn.style.display = 'inline-block';
                } else if (currentRow === 5) {
                  setTimeout(() => alert(`‚ùå Out of tries! Word was "${WORD}"`), 100);
                  input.disabled = true;
                  playAgainBtn.style.display = 'inline-block';
                }

                currentRow++;
                input.value = '';
              }
            });

            playAgainBtn.addEventListener('click', resetGame);

            fetch('valid-wordle-words.txt')
              .then(res => res.text())
              .then(data => {
                WORD_LIST = data.split('\n').map(w => w.trim().toLowerCase()).filter(w => w.length === 5);
                resetGame();
              })
              .catch(err => {
                alert("‚ö†Ô∏è Could not load word list.");
                console.error(err);
              });
          </script> </div>
